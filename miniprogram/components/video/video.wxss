/* components/video/video.wxss */
.video-item {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 0;
  padding-bottom: 133%;
}
.video-cover {
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  transform: translateY(-50%);
  z-index: -1;
}
.play-button {
  width: 40rpx;
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
}